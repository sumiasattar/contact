<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="4dp"
    android:layout_margin="4dp"

    android:gravity="center">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:elevation="5dp"
        app:cardCornerRadius="10dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/linearlayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/pur"
                    android:gravity="center"
                    android:layout_margin="6dp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="50dp"
                        android:src="@drawable/lgo"
                        android:padding="8dp"
                        android:background="@drawable/circle"
                        android:layout_height="50dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="FriendForever"
                        android:textSize="30sp"
                        android:textColor="@color/white"
                        android:textStyle="italic" />
                </LinearLayout>
                <ImageView
                    android:src="@drawable/square"
                    android:background="@color/pur"
                    android:id="@+id/imageview1"
                    android:layout_centerHorizontal="true"
                    android:layout_width="20dp"
                    android:layout_marginTop="-20dp"
                    android:rotation="45"
                    android:layout_below="@+id/linearlayout1"
                    android:layout_height="20dp" />
                <TextView
                    android:layout_marginTop="150dp"
                    android:textColor="@color/pur"
                    android:gravity="center"
                    android:textSize="40sp"
                    android:text="Login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <RelativeLayout
                    android:id="@+id/relatielayoutone"
                    android:layout_marginTop="80dp"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_below="@+id/imageview1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/relatielayouttwo"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_below="@+id/relatielayoutone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/Eail_edittext"
                            android:layout_alignParentTop="true"
                            android:hint="Email"
                            android:inputType="textEmailAddress"
                            android:paddingLeft="5dp"
                            android:drawableRight="@drawable/ic_email_black_24dp"
                            android:layout_width="match_parent"
                            android:textSize="16sp"
                            android:layout_height="wrap_content" />
                    </android.support.design.widget.TextInputLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/relatielayoutthree"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_below="@+id/relatielayouttwo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/Passwordedittext"
                            android:layout_alignParentTop="true"
                            android:hint="Password"
                            android:drawableRight="@drawable/ic_enhanced_encryption_black_24dp"
                            android:paddingLeft="5dp"
                            android:layout_width="match_parent"
                            android:textSize="16sp"
                            android:layout_height="wrap_content" />
                    </android.support.design.widget.TextInputLayout>
                </RelativeLayout>
                <com.wang.avi.AVLoadingIndicatorView
                    android:id="@+id/loader"
                    android:visibility="gone"
                    app:indicatorColor="@color/pur"
                    android:layout_gravity="center"
                    android:layout_marginLeft="100dp"
                    style="@style/AVLoadingIndicatorView.Large"
                    app:indicatorName="BallClipRotateMultipleIndicator"
                    android:layout_width="wrap_content"
                   android:layout_above="@id/Login"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/Login"
                    android:textColor="@color/white"
                    android:background="@color/pur"
                    android:layout_marginTop="20dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Login"
                    android:textSize="20sp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_below="@+id/relatielayoutthree"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/signuphere"
                    android:textColor="@color/texview"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"

                    android:fontFamily="sans-serif-condensed"
                    android:text="Dont have account yet?SignUp Here"
                    android:textSize="10sp"
                    android:layout_below="@+id/Login"
                    android:layout_width="wrap_content"
                    android:textAllCaps="false"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>

</RelativeLayout>

