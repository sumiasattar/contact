<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="6dp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:padding="16dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:elevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/UserNameTV"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:drawableLeft="@drawable/ic_identification"
                        android:drawablePadding="10dp"
                        android:fontFamily="sans-serif-thin"
                        android:padding="16dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="sumiasattar"
                        android:textStyle="bold"
                        android:drawableStart="@drawable/ic_identification" />

                    <TextView
                        android:id="@+id/UserPhoneTV"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:layout_weight="0.5"
                        android:drawableLeft="@drawable/ic_phone_symbol_of_an_auricular_inside_a_circle"
                        android:drawablePadding="10dp"
                        android:fontFamily="sans-serif-thin"
                        android:padding="16dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="03036318276"
                        android:textStyle="bold" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:elevation="2dp"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/adress"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:drawableLeft="@drawable/ic_envelope"
                        android:drawablePadding="10dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:padding="16dp"
                        android:text="adress"
                        android:drawableStart="@drawable/ic_envelope" />

                    <TextView
                        android:id="@+id/ProductKeyTV"

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:layout_weight=".5"
                        android:drawableLeft="@drawable/ic_key"
                        android:drawablePadding="10dp"
                        android:padding="16dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="sumia"
                        android:drawableStart="@drawable/ic_key" />
                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/AddressTV"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableLeft="@drawable/ic_address"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="p_o_box_sargodha"
                    android:drawableStart="@drawable/ic_address"
                    android:paddingStart="20dp" />
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>